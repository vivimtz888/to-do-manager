<h1>My tasks</h1>
<ul id="tasks">
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %> <%= check_box("task", task.id, {checked: task.completed}) %>
      <%= link_to task_path(task),
            method: :delete,
            data: { confirm: "Delete #{task.title}" } do %>
            <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to new_task_path do %>
  <i class="fas fa-plus"></i></i> Add a new task
<% end %>



